<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" >


    <TextView
        android:layout_marginTop="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Citizen Reporting"
        android:textSize="24dp"
        android:layout_gravity="center_horizontal"/>

    <ImageView
        android:id="@+id/activity_report_fill_imageview"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="fitXY"/>

    <Button
        android:id="@+id/activity_report_fill_select_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SELECT IMAGE"/>

    <EditText
        android:id="@+id/activity_report_fill_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Title"/>

    <EditText
        android:id="@+id/activity_report_fill_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Description"/>

    <Button
        android:id="@+id/activity_report_fill_upload_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload"/>

</LinearLayout>
